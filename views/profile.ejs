<body>
  <h1>Welcome, <%= user.username %></h1>
  <a href="/">Back to Home</a> | <a href="/logout">Logout</a>
  <h2>Your Blogs</h2>
  <% blogs.forEach(blog => { %>
    <div>
      <h3><%= blog.title %></h3>
      <p><%= blog.content %></p>
      <small>Posted on <%= blog.createdAt.toLocaleString() %></small>
    </div>
    <hr>
  <% }) %>



